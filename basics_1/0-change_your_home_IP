#!/usr/bin/env bash
# Script to change localhost and facebook.com IPs

# Create a temporary file
tmpfile=$(mktemp)

# Remove existing lines for localhost and facebook.com, then write new ones
grep -vE 'localhost|facebook.com' /etc/hosts > "$tmpfile"
echo "127.0.0.2 localhost" >> "$tmpfile"
echo "8.8.8.8 facebook.com" >> "$tmpfile"

# Move the temporary file to /etc/hosts
sudo mv "$tmpfile" /etc/hosts
